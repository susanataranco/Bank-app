{
  "compilerOptions": {
    "noEmit": false, 
    "skipLibCheck": true,
    "strict": true,
    "module": "ESNext",
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": ["src/**/*", "api/utils"],
  "exclude": ["node_modules", "api/**/*"]
}
